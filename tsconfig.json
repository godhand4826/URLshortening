{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/types"
    ],
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "@types/jest",
    ]
  },
  "include": [
    "src/**/*"
  ]
}